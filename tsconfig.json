{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "module": "esnext",
    "strict": true,
    "target": "es6",
    "types": ["svelte"]
  },
  "include": [
    "game/**/*",
    "client/**/*"
  ],
  "exclude": [
    "**/*.test.ts"
  ]
}
